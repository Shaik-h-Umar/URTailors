<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Top Yellow Bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FBEA57"/>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Self Measurement"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="25sp"/>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Measurement Table -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp">

            <EditText
                android:id="@+id/ed_arm"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Arm"/>

            <EditText
                android:id="@+id/ed_full_chest"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Full Chest"/>

            <EditText
                android:id="@+id/ed_full_shoulder"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Full Shoulder"/>

            <EditText
                android:id="@+id/ed_neck"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Neck"/>

            <EditText
                android:id="@+id/ed_sleeve"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Sleeve"/>

            <EditText
                android:id="@+id/ed_bicep"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Bicep"/>

            <EditText
                android:id="@+id/ed_wrist"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Wrist"/>

            <EditText
                android:id="@+id/ed_waist_stomach"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Waist/Stomach"/>

            <EditText
                android:id="@+id/ed_hips_seat"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Hips/Seat"/>

            <EditText
                android:id="@+id/ed_front_length"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Front Length"/>

            <EditText
                android:id="@+id/ed_front_chest"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Front Chest"/>

            <EditText
                android:id="@+id/ed_back_width"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Back Width"/>

            <EditText
                android:id="@+id/ed_full_sleeve"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Full Sleeve"/>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note: give Mesurements in Inches"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/self_measure_continue"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/black"
        android:layout_gravity="center"
        android:layout_margin="16dp"/>

    <!-- Bottom Navigation Bar (Fixed) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FBEA57"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_nav"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/home2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/orderic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_nav"
                android:layout_width="24dp"
                android:layout_height="19dp"
                android:src="@mipmap/profile2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/setting_nev"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/setting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seting"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
